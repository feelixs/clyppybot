# ============================================
# CLYPPY Bot Environment Variables
# ============================================
# Copy this file to .env and fill in your values, and then build the project with Docker

# ============================================
# REQUIRED - Discord Bot Configuration
# ============================================

# Your Discord Bot Token
# Get this from https://discord.com/developers/applications
CLYPP_TOKEN=your_discord_bot_token_here


# ============================================
# REQUIRED FOR FULL FUNCTIONALITY
# ============================================
# Note: These are private API keys not publicly available
# The bot will have limited functionality without these

# API key for clyppy.io and felixcreations.com services
# Required for: video processing, CDN, user management, database sync
clyppy_post_key=your_api_key_here


# ============================================
# OPTIONAL - Logging & Monitoring
# ============================================

# Discord webhook URL for error/info logs
LOG_WEBHOOK=

# Discord webhook URL for application usage tracking
APPUSE_WEBHOOK=


# ============================================
# OPTIONAL - Server Configuration
# ============================================

# Special Discord server ID for download testing
# Leave empty for normal operation
DL_SERVER_ID=


# ============================================
# OPTIONAL - Environment Mode
# ============================================

# Set to any value (e.g., "1") to enable test mode
# Test mode uses separate database and may have different behavior
TEST=

# Set to any value (e.g., "1") to enable contributor mode
# This bypasses all API calls and logs what would have been called
# Useful for contributors who don't have access to clyppy.io API
CONTRIB_INSTANCE=1

# AI Service API Keys (for ai_extend command which is deprecated)
# REPLICATE_API_TOKEN=
# RUNWAYML_API_SECRET=
# GOOGLE_GENAI_API_KEY=
